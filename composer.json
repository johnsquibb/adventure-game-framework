{
  "name": "johnsquibb/aventure-game-framework",
  "type": "project",
  "description": "A lightweight framework for building text adventures",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "AdventureGame\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9"
  },
  "autoload-dev": {
    "psr-4": {
      "AdventureGame\\Test\\": "test/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit test",
    "example": "php examples/demo-game/main.php"
  },
  "require": {
    "ext-readline": "*",
    "johnsquibb/adventure-game-markup-language": "dev-main"
  },
  "repositories": [
    {
      "type": "vcs",
      "url":  "git@github.com:johnsquibb/adventure-game-markup-language.git"
    }
  ]
}
