{
  "name": "johnsquibb/aventure-game-framework",
  "type": "project",
  "description": "A lightweight framework for building text adventures",
  "license": "MIT",
  "require-dev": {
    "phpunit/phpunit": "^8"
  },
  "autoload": {
    "psr-4": {
      "AdventureGame\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AdventureGame\\Test\\": "test/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit test",
    "example": "php examples/demo-game/main.php"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/johnsquibb/adventure-game-markup-language"
    }
  ],
  "require": {
    "ext-readline": "*",
    "adventure-game-markup-language/adventure-game-markup-language": "*"
  }
}
