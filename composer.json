{
  "name": "johnsquibb/adventure-game-framework",
  "type": "project",
  "description": "A PHP framework for console text adventure games.",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "AdventureGame\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "autoload-dev": {
    "psr-4": {
      "AdventureGame\\Test\\": "test/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit test",
    "example": "php examples/demo-game/main.php",
    "example-test": "php examples/demo-game/test.php"
  },
  "require": {
    "ext-readline": "*",
    "johnsquibb/adventure-game-markup-language": "0.1.0-alpha"
  }
}
